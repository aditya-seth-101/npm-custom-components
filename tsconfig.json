{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "outDir": "dist",
    "skipLibCheck": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node"
  }
}
